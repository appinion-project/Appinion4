<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:background="#aaaaaa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <com.rey.material.widget.Button
                android:id="@+id/btn_giftUse_back"
                style="@style/AppTheme"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="Back"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_rectangle"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:layout_weight=".5">

                <com.rey.material.widget.Button
                    android:id="@+id/btn_giftUse_counttotal_thousand"
                    style="@style/AppTheme"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:onClick="onClick"
                    android:background="@drawable/round_button_gift_count"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:text="0"
                    android:textColor="#FFFFFF" />
                <com.rey.material.widget.Button
                    android:id="@+id/btn_giftUse_plus_thousand"
                    style="@style/AppTheme"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="onClick"
                    android:text="-"
                    android:background="@drawable/circle_button_minus"
                    android:textColor="#f30505"
                    />



            </LinearLayout>

            <com.rey.material.widget.Button
                android:id="@+id/btn_giftUse_thousand"
                style="@style/AppTheme"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="1000"
                android:layout_weight="3"
                android:background="@mipmap/gift_card3"
                />
            <com.rey.material.widget.Button
                android:id="@+id/btn_giftUse_amount_thousand"
                style="@style/AppTheme"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:onClick="onClick"

                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="0"
                android:layout_weight=".5"
                android:background="#000000"
                android:layout_marginRight="4dp"
                android:textColor="#FFFFFF" />








        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="5"
            android:background="@drawable/border_rectangle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:layout_weight=".5">

                <com.rey.material.widget.Button
                    android:id="@+id/btn_giftUse_counttotal_five"
                    style="@style/AppTheme"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:onClick="onClick"
                    android:background="@drawable/round_button_gift_count"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"

                    android:text="0"
                    android:textColor="#FFFFFF" />

                <com.rey.material.widget.Button
                    android:id="@+id/btn_giftUse_plus_five"
                    style="@style/AppTheme"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="onClick"
                    android:text="-"
                    android:background="@drawable/circle_button_minus"
                    android:textColor="#ff0808" />



            </LinearLayout>

            <com.rey.material.widget.Button
                android:id="@+id/btn_giftUse_five"
                style="@style/AppTheme"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:background="@mipmap/gift_card2"
                android:layout_weight="3"
                android:text="500"/>

            <com.rey.material.widget.Button
                android:id="@+id/btn_giftUse_totalamount_five"
                style="@style/AppTheme"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:background="#000000"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight=".5"
                android:text="0"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_rectangle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_weight=".5">

                <com.rey.material.widget.Button
                    android:id="@+id/btn_giftUse_counttotal_hundred"
                    style="@style/AppTheme"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:onClick="onClick"
                    android:background="@drawable/round_button_gift_count"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:text="0"
                    android:textColor="#FFFFFF" />
                <com.rey.material.widget.Button
                    android:id="@+id/btn_giftUse_plus_hundred"
                    style="@style/AppTheme"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="onClick"
                    android:text="-"
                    android:background="@drawable/circle_button_minus"
                    android:textColor="#ef0b0b" />



            </LinearLayout>

            <com.rey.material.widget.Button
                android:id="@+id/btn_giftUse_hundred"
                style="@style/AppTheme"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:background="@mipmap/gift_card3"
                android:layout_weight="3"
                android:text="100"/>

            <com.rey.material.widget.Button
                android:id="@+id/btn_giftUse_totalamount_hundred"
                style="@style/AppTheme"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:background="#000000"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight=".5"
                android:text="0"
                android:textColor="#FFFFFF" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_rectangle">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total:"
                android:id="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/textViewTotal" />

            <com.rey.material.widget.Button
                android:id="@+id/btn_giftUse_totalamount_Use"
                style="@style/AppTheme"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:background="@drawable/round_button_gift_count"
                android:text="USE"
                android:textColor="#FFFFFF" />

        </LinearLayout>






    </LinearLayout>




</LinearLayout>
