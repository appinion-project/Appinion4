<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size android:width="10dp"
                android:height="10dp" />
            <solid android:color="#dd4d4d"/>
            <stroke
                android:width="4dp"
                android:color="#ffffff"
                >
            </stroke>
        </shape>
        <bitmap android:src="@mipmap/tick"/>

    </item>

    <item>
        <bitmap android:src="@mipmap/tick_back"/>
    </item>


    
</layer-list>